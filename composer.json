{
    "name": "qubus/validation",
    "description": "A framework agnostic validation library like the one found in Laravel.",
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "josh@joshuaparker.blog"
        }
    ],
    "require": {
        "php": "^7.4",
        "qubus/exception": "^1.2",
        "qubus/support": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.1",
        "mockery/mockery": "^1.3.1",
        "php-coveralls/php-coveralls": "^1.0",
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.3.1"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Validation\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qubus\\Tests\\Validation\\": "Tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
