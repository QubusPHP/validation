{
    "name": "qubus/validation",
    "description": "A framework agnostic validation library like the one found in Laravel.",
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "joshua@joshuaparker.dev"
        }
    ],
    "require": {
        "php": ">=8.1",
        "qubus/support": "^2.3"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "pestphp/pest": "^1.21",
        "phpunit/phpunit": "^9.0",
        "qubus/qubus-coding-standard": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Validation\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qubus\\Tests\\Validation\\": "Tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    }
}
